<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <CheckBox
        android:id="@+id/crimeListItemSolvedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:enabled="false"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/crimeListItemTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crimeListItemSolvedCheckBox"
        android:text="Crime Title"
        android:textStyle="bold"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>
    <TextView
        android:id="@+id/crimeListItemDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crimeListItemTitleTextView"
        android:layout_toLeftOf="@id/crimeListItemSolvedCheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="Crime Date"/>







</RelativeLayout>